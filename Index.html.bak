  <style>
    /* Basic styles for menu toggle on small screens */
    .menu-toggle {
        display: none; /* Hidden on larger screens */
        background: none;
        border: none;
        color: white;
        font-size: 2rem;
        cursor: pointer;
        position: absolute;
        top: 1rem;
        left: 1rem;
        z-index: 1000;
    }
    #main-nav ul {
        display: flex; /* Default to flex for larger screens */
    }
    @media (max-width: 768px) {
        .menu-toggle {
            display: block; /* Show on small screens */
        }
        #main-nav ul {
            display: none; /* Hide by default on small screens */
            flex-direction: column;
            width: 100%;
            background-color: #222;
            position: absolute;
            top: 100%;
            left: 0;
            z-index: 999;
        }
        #main-nav ul.active {
            display: flex; /* Show when active */
        }
        #main-nav li {
            text-align: left;
            border-bottom: 1px solid #333;
        }
    }
  </style>
</head>
